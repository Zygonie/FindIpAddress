<Window x:Class="FindIpAddress.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="80" Width="335" Closing="OnClose" StateChanged="Window_StateChanged" IsVisibleChanged="Window_IsVisibleChanged" Icon="Images/iRC_icon.ico" ResizeMode="CanMinimize" WindowStartupLocation="CenterScreen" Loaded="Window_Loaded">
    <Grid>
        <TextBox x:Name="TextIpResult" HorizontalAlignment="Left" Height="25" Margin="10,10,0,0" TextWrapping="Wrap" Text="{Binding Path=CurrentIP}" VerticalAlignment="Top" Width="120"/>
        <Button x:Name="ButtonFind" Content="Check IP" HorizontalAlignment="Left" Margin="145,10,0,0" VerticalAlignment="Top" Width="75" Click="ButtonFind_Click"/>
        <Button x:Name="ButtonSendMail" Content="Send Mail" HorizontalAlignment="Left" Margin="235,10,0,0" VerticalAlignment="Top" Width="75" Click="ButtonSendMail_Click"/>
    </Grid>
</Window>
